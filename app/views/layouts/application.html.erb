<!DOCTYPE html>
<html>
  <head>
    <%= include_gon %>
    <title>BURRP</title>
    <%= csrf_meta_tags %>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body background='https://static.pexels.com/photos/172292/pexels-photo-172292.jpeg'>

     <%= render "navbar" %>
     <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>
     <main>
       <%= yield %>
     </main>
    <%= render "footer" %>
  </body>
</html>
